<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_lespi_aki_message_box_color"
    android:id="@+id/com_lespi_aki_message_you_layout"
    android:padding="2dp" >

    <TextView
        android:id="@+id/com_lespi_aki_message_sender_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/com_lespi_aki_message_sender_picture"
        android:layout_width="@dimen/picture_layout_width_you"
        android:layout_height="@dimen/picture_layout_height_you"
        android:contentDescription="@string/com_lespi_aki_message_sender_picture_hint"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/com_lespi_aki_message_sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/com_lespi_aki_message_sender_picture"
        android:paddingBottom="10dp"
        android:textColor="@color/com_lespi_aki_message_text_color"
        android:textSize="@dimen/sender_name_size_you"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/com_lespi_aki_message_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/com_lespi_aki_message_sender_name"
        android:layout_below="@+id/com_lespi_aki_message_sender_name"
        android:paddingBottom="5dp"
        android:singleLine="false"
        android:textColor="@color/com_lespi_aki_message_text_color"
        android:textSize="@dimen/message_size_you" />



    <ImageView
        android:id="@+id/com_lespi_aki_message_sender_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/com_lespi_aki_message_sender_gender_hint"
        android:paddingStart="65dp"
        android:paddingEnd="0dp"
        android:paddingTop="65dp" />

</RelativeLayout>