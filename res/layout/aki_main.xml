<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AkiMain" >

    <LinearLayout
        android:id="@+id/loginArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#333f4f"
            android:orientation="horizontal" >

            <com.facebook.widget.LoginButton
                android:id="@+id/authButton"
                style="@style/FacebookLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                facebook:login_text="@string/login_text"
                facebook:logout_text="@string/login_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chatArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chat_background"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#333f4f"
            android:orientation="horizontal" >

            <com.facebook.widget.LoginButton
                style="@style/FacebookLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                facebook:login_text="@string/logout_text"
                facebook:logout_text="@string/logout_text" />
        </LinearLayout>

        <ListView
            android:id="@+id/listMessages"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="7dp"
            android:padding="7dp"
            android:scrollbars="horizontal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#333f4f"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/chatBox"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/chat_box_hint"
                android:maxHeight="120dp"
                android:scrollHorizontally="true"
                android:textColor="#fff" />

            <ImageButton
                android:id="@+id/chatSendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/send_message_description"
                android:onClick="sendMessage"
                android:padding="10dp"
                android:src="@drawable/send"
                android:textColor="#e5e5e5"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>