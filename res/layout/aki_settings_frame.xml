<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="#333f4f"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:background="#956134"
        android:orientation="horizontal" >

        <com.facebook.widget.LoginButton
            android:id="@+id/com_lespi_aki_main_settings_logout_btn"
            style="@style/AkiButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            facebook:login_text="@string/com_lespi_aki_main_settings_logout_text"
            facebook:logout_text="@string/com_lespi_aki_main_settings_logout_text" />
    </LinearLayout>

</FrameLayout>