<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aki_chat_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AkiMainActivity" >

    <LinearLayout
        android:id="@+id/com_lespi_aki_main_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:background="#333f4f"
            android:orientation="horizontal" >

            <com.facebook.widget.LoginButton
                android:id="@+id/com_lespi_aki_main_login_auth_btn"
                style="@style/AkiButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                facebook:login_text="@string/com_lespi_aki_main_login_auth_text"
                facebook:logout_text="@string/com_lespi_aki_main_login_auth_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/com_lespi_aki_main_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chat_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:background="#333f4f"
            android:orientation="horizontal" >

            <Button
                style="@style/AkiButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:onClick="openSettings"
                android:text="@string/com_lespi_aki_main_chat_opensettings_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/com_lespi_aki_main_chat_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:visibility="gone" >
        </LinearLayout>

        <ListView
            android:id="@+id/com_lespi_aki_main_messages_list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="7dp"
            android:padding="7dp"
            android:scrollbars="horizontal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#333f4f"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/com_lespi_aki_main_chat_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/com_lespi_aki_main_chat_input_hint"
                android:maxHeight="50dp"
                android:scrollHorizontally="true"
                android:textColor="#fff" />

            <ImageButton
                android:id="@+id/com_lespi_aki_main_chat_send_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/com_lespi_aki_main_chat_send_hint"
                android:onClick="sendMessage"
                android:padding="10dp"
                android:src="@drawable/send"
                android:textColor="#e5e5e5"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>