<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aki_chat_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/com_lespi_aki_orange"
    tools:context=".AkiMainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/com_lespi_aki_main_chat_action_buttons"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="#333f4f"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/com_lespi_aki_main_chat_settings_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:contentDescription="@string/com_lespi_aki_main_chat_settings_hint"
                android:src="@drawable/icon_settings" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/com_lespi_aki_main_chat_skip_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:contentDescription="@string/com_lespi_aki_main_chat_skip_text"
                    android:src="@drawable/icon_skip" />

                <ImageButton
                    android:id="@+id/com_lespi_aki_main_chat_exit_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:contentDescription="@string/com_lespi_aki_main_chat_exit_text"
                    android:src="@drawable/icon_exit" />

                <ImageButton
                    android:id="@+id/com_lespi_aki_main_chat_global_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:contentDescription="@string/com_lespi_aki_main_chat_exit_text"
                    android:src="@drawable/icon_global" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/com_lespi_aki_main_chat_mutual_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:contentDescription="@string/com_lespi_aki_main_chat_settings_hint"
                android:src="@drawable/icon_mutual" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/com_lespi_aki_main_chat_members_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/picture_layout_height_members"
            android:layout_below="@id/com_lespi_aki_main_chat_action_buttons"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/com_lespi_aki_main_chat_members_list_sixth"
                android:layout_width="@dimen/picture_layout_width_members"
                android:layout_height="@dimen/picture_layout_height_members"
                android:contentDescription="@string/com_lespi_aki_message_sender_picture_hint"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/com_lespi_aki_main_chat_members_list_fourth"
                android:layout_width="@dimen/picture_layout_width_members"
                android:layout_height="@dimen/picture_layout_height_members"
                android:contentDescription="@string/com_lespi_aki_message_sender_picture_hint"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/com_lespi_aki_main_chat_members_list_second"
                android:layout_width="@dimen/picture_layout_width_members"
                android:layout_height="@dimen/picture_layout_height_members"
                android:contentDescription="@string/com_lespi_aki_message_sender_picture_hint"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/com_lespi_aki_main_chat_members_list_first"
                android:layout_width="@dimen/picture_layout_width_members"
                android:layout_height="@dimen/picture_layout_height_members"
                android:contentDescription="@string/com_lespi_aki_message_sender_picture_hint"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/com_lespi_aki_main_chat_members_list_third"
                android:layout_width="@dimen/picture_layout_width_members"
                android:layout_height="@dimen/picture_layout_height_members"
                android:contentDescription="@string/com_lespi_aki_message_sender_picture_hint"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/com_lespi_aki_main_chat_members_list_fifth"
                android:layout_width="@dimen/picture_layout_width_members"
                android:layout_height="@dimen/picture_layout_height_members"
                android:contentDescription="@string/com_lespi_aki_message_sender_picture_hint"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/com_lespi_aki_main_chat_members_list_seventh"
                android:layout_width="@dimen/picture_layout_width_members"
                android:layout_height="@dimen/picture_layout_height_members"
                android:contentDescription="@string/com_lespi_aki_message_sender_picture_hint"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/com_lespi_aki_main_chat_status"
            style="@style/AkiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/com_lespi_aki_main_chat_members_list"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|center_horizontal"
            android:alpha="0.6"
            android:gravity="center"
            android:text="@string/com_lespi_aki_main_chat_status_entering"
            android:textColor="#FFF3E7"
            android:textSize="12sp"
            android:textStyle="bold|italic" />

        <ListView
            android:id="@+id/com_lespi_aki_main_messages_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/com_lespi_aki_main_chat_input_area"
            android:layout_below="@id/com_lespi_aki_main_chat_status"
            android:alwaysDrawnWithCache="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="7dp"
            android:padding="7dp"
            android:scrollbars="horizontal"
            android:stackFromBottom="true" />

        <LinearLayout
            android:id="@+id/com_lespi_aki_main_chat_input_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="#333f4f"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="0dp" >

            <EditText
                android:id="@+id/com_lespi_aki_main_chat_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/com_lespi_aki_main_chat_input_hint"
                android:maxHeight="50dp"
                android:scrollHorizontally="true"
                android:textColor="#fff" />

            <ImageButton
                android:id="@+id/com_lespi_aki_main_chat_send_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/com_lespi_aki_main_chat_input_hint"
                android:padding="10dp"
                android:src="@drawable/icon_send"
                android:textColor="#e5e5e5"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/com_lespi_aki_main_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/com_lespi_aki_blue"
            android:contentDescription="@string/com_lespi_aki_splash_logo_hint" />

        <ImageView
            android:id="@+id/com_lespi_aki_main_background_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/com_lespi_aki_splash_logo_hint"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/com_lespi_aki_main_background_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/com_lespi_aki_main_background_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>