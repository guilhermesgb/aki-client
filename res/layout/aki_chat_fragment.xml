<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aki_chat_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".AkiMainActivity" >

    <RelativeLayout
        android:id="@+id/com_lespi_aki_main_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone"
        tools:ignore="MergeRootFrame" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:background="#333f4f"
            android:orientation="horizontal" >

            <com.facebook.widget.LoginButton
                android:id="@+id/com_lespi_aki_main_login_auth_btn"
                style="@style/AkiButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                facebook:login_text="@string/com_lespi_aki_main_login_auth_text"
                facebook:logout_text="@string/com_lespi_aki_main_login_auth_text" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/com_lespi_aki_main_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:background="#333f4f"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="18sp"
                android:textColor="@color/com_lespi_aki_message_text_color_system"
                android:text="@string/com_lespi_aki_main_chat_exit_text" />

            <ImageButton
                android:id="@+id/com_lespi_aki_main_chat_exit_btn"
                style="@style/AkiButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:contentDescription="@string/com_lespi_aki_main_chat_exit_text"
                android:src="@drawable/icon_exit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/com_lespi_aki_message_text_color_system"
                android:text="@string/com_lespi_aki_main_chat_skip_text" />

            <ImageButton
                android:id="@+id/com_lespi_aki_main_chat_skip_btn"
                style="@style/AkiButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/com_lespi_aki_main_chat_skip_text"
                android:src="@drawable/icon_skip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:textSize="20sp"
                android:textColor="@color/com_lespi_aki_message_text_color_system"
                android:text="@string/com_lespi_aki_main_chat_settings_text" />

            <ImageButton
                android:id="@+id/com_lespi_aki_main_chat_settings_btn"
                style="@style/AkiButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:contentDescription="@string/com_lespi_aki_main_chat_settings_text"
                android:src="@drawable/icon_settings" />
        </LinearLayout>

        <ListView
            android:id="@+id/com_lespi_aki_main_messages_list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="7dp"
            android:padding="7dp"
            android:scrollbars="horizontal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#333f4f"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/com_lespi_aki_main_chat_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/com_lespi_aki_main_chat_input_hint"
                android:maxHeight="50dp"
                android:scrollHorizontally="true"
                android:textColor="#fff" />

            <ImageButton
                android:id="@+id/com_lespi_aki_main_chat_send_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/com_lespi_aki_main_chat_send_hint"
                android:padding="10dp"
                android:src="@drawable/icon_send"
                android:textColor="#e5e5e5"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>